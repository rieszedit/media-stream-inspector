{
  "manifest_version": 3,
  "name": "Media Stream Inspector",
  "version": "2.1.0",
  "description": "Detect and download HTML5 media streams (HLS/MP4) from web pages.",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "declarativeNetRequest",
    "webRequest",
    "webNavigation",
    "offscreen",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "site_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "exclude_matches": [
        "*://*.youtube.com/*",
        "*://*.x.com/*",
        "*://*.twitter.com/*",
        "*://*.x.co/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}